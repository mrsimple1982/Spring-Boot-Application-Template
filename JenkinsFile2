pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                echo 'Build stage triggered'
				bat(mvn install)
            }
        }
        stage('Test') {
            steps {
                echo 'Test stage triggered'
				bat(mvn test)
            }
        }
		stage('Deploy') {
            steps {
                echo 'Deploy stage triggered'
				bat(mvn spring-boot:run)
            }
        }
    }   
}
